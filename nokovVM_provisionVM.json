{
  "builders": [
    {
      "boot_wait": "30s",
      "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown -P now",
      "ssh_password": "{{user `password`}}",
      "ssh_timeout": "10000s",
      "ssh_username": "{{user `user`}}",
      "source_path": "output-vmware-iso/{{user `vm-name`}}.vmx",
      "type": "vmware-vmx",
      "vmx_data": {
        "numvcpus": "2",
        "memsize": "2048",
        "scsi0.virtualDev": "lsilogic",
        "ethernet0.virtualDev": "vmxnet3",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "usb.present": "TRUE",
        "sound.present": "TRUE",
        "sound.fileName": "-1",
        "sound.autodetect": "TRUE",
        "mks.enable3d": "TRUE",
        "svga.graphicsMemoryKB": "16384"
      },
      "vm_name": "{{user `vm-name`}}"
    }
  ],
  "provisioners": [
    {
      "destination": "/home/{{user `user`}}/update_all_projects.sh",
      "source": "{{user `contentDir`}}/update_all_projects.sh",
      "type": "file"
    },
    {
      "destination": "/home/{{user `user`}}/Desktop",
      "source": "{{user `contentDir`}}/desktop/",
      "type": "file"
    },
    {
      "destination": "/home/{{user `user`}}/Pictures",
      "source": "{{user `contentDir`}}/pictures/",
      "type": "file"
    },
    {
      "destination": "/home/{{user `user`}}/{{user `gccFile`}}",
      "source": "{{user `contentDir`}}/{{user `gccFile`}}",
      "type": "file"
    },
    {
      "destination": "/home/{{user `user`}}/{{user `eclipseFile`}}",
      "source": "{{user `contentDir`}}/{{user `eclipseFile`}}",
      "type": "file"
    },
    {
      "destination": "/home/{{user `user`}}/{{user `eclipsePrj`}}",
      "source": "{{user `contentDir`}}/{{user `eclipsePrj`}}",
      "type": "file"
    },
    {
      "destination": "/home/{{user `user`}}/{{user `openocd`}}",
      "source": "{{user `contentDir`}}/{{user `openocd`}}",
      "type": "file"
    },
    {
      "execute_command": "echo '{{user `password`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "script": "provision.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "contentDir": "contentForVM",
    "password": "nokovflie",
    "user": "nokov",
    "vm-name": "NokovVM"
  }
}